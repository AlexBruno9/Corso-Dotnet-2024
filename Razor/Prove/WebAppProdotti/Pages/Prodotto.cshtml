@page
@model ProdottoModel
@{
    ViewData["Title"] = "Prodotti";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Dettagli</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var prodotto in Model.Prodotti)

        {
            <tr>
                <td>@prodotto.Nome</td>
                <td>@prodotto.Prezzo</td>
                <td>
                    <a asp-page="ProdottoDettaglio" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-disponibilita="@prodotto.Disponibilita" asp-route-info="@prodotto.Info" asp-route-dettaglio="@prodotto.Dettaglio">@Html.DisplayFor(modelItem => prodotto.Nome)</a>
                </td>
            
            </tr>
        }
    </tbody>
    </table>