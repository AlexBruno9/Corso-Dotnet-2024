@page
@model ModificaProdottoModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="prezzo">Prezzo</label>
        <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto!.Prezzo" />
        <label for="disponibilita">Disponibilita</label>
        <input type="text" class="form-control" name="disponibilita" value="@Model.Prodotto!.Disponibilita" />
        <label for="info">Info</label>
        <input type="text" class="form-control" name="info" value="@Model.Prodotto!.Info" />
        <label for="dettaglio">Dettaglio</label>
        <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto!.Dettaglio" />
    </div>


    <button type="submit" class="btn btn-dark mt-4">Salva</button>

</form>