@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Title"]</h1>

<div id="carouselExampleCaptions" class="carousel slide my-3">
    <div class="carousel-indicators">
        @{
            int num = 0;
        }
        @foreach (var prodotto in Model.Prodotti)
        {
            if(num==0)
            {
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@num" class="active" aria-current="true" aria-label="@prodotto.Nome"></button>

            }
            else
            {
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@num" aria-label="@prodotto.Nome"></button>

            }     
                        num++;
       
        }
    </div>
    <div class="carousel-inner">
        @{
            int index = 0;
        }
        @foreach (var prodotto in Model.Prodotti)
        {
            if (index == 0)
            {
                <div class="carousel-item active">
                    <img src="@prodotto.Immagine" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@prodotto.Nome</h5>
                        <p>@prodotto.Dettaglio</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="@prodotto.Immagine" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@prodotto.Nome</h5>
                        <p>@prodotto.Dettaglio</p>
                    </div>
                </div>
            }
            index++;
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>