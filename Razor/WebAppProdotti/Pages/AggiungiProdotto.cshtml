@page
@model AggiungiProdottoModel
@{
    ViewData["Title"] = "Aggiungi Prodotti";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" name="nome" required />
    </div>
    <div class="form-group mb-3">
        <label for="prezzo">Prezzo</label>
        <input type="text" class="form-control" name="prezzo" />
    </div>
    <div class="form-group">
        <label for="dettaglio">Dettaglio</label>
        <input type="text" class="form-control" name="dettaglio" />
    </div>
    
    <button type="submit" class="btn btn-dark mt-4">Aggiungi</button>

</form>