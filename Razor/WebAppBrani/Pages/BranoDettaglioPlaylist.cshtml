@page
@model BranoDettaglioPlaylistModel
@{
    ViewData["Title"] = "Dettaglio Brano";
}



<style>
    .imginfo {
        border-radius: 20px;
    }

    .card-body {
        font-size: larger;
        font-family: "Roboto";
    }

    a {
        color: rgb(0, 0, 0);
    }

    .card {
        background-color: rgb(255, 255, 255);
    }

    body {
        font-family: Montserrat;
    }
</style>

<body>




    <h1 class="display-6 p-3 text-muted">Info - @Model.Brano!.Titolo</h1>


    <div class="card mb-3">
        <div class="row g-0 p-5">
            <div class="col-md-5">
                <img src="@Model.Brano!.Immagine" class="imginfo" alt="..." width="400" height="400">
            </div>

            <div class="col-md-7">
                <div class="card-body mt-4">
                    <h5 class="card-title"> @Model.Brano!.Titolo</h5>
                    <p class="card-text mt-4 ">Artista: @Model.Brano!.Artista</p>
                    <p class="card-text ">Anno: @Model.Brano!.Anno</p>
                    <p class="card-text">Genere: @Model.Brano!.Genere</p>
                    <p class="card-text">Durata: @Model.Brano!.Durata</p>

                    <div class="btn-group mt-4" role="group" aria-label="Basic outlined example">
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-play"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-pause"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-stop"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
    </div>
    <br>
    <a asp-page="Playlist"> <i class="bi bi-arrow-return-left"></i> Torna alla Playlist</a>

</body>
<br><br><br>

