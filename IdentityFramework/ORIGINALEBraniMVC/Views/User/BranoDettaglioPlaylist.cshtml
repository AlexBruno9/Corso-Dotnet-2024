@model Brano
@{
    ViewData["Title"] = "Dettaglio Brano";
}

<body>

    <h1 class="display-6 p-3 text-muted">Info - @Model.Titolo</h1>

    <div>
        <div class="card mb-3">
            <div class="row g-0 p-5">
                <div class="col-md-5">
                    <img src="@Model.Immagine" class="imginfo" alt="..." width="400" height="400">
                </div>

                <div class="col-md-7">
                    <div class="card-body mt-4">
                        <h5 class="card-title"> @Model.Titolo</h5>
                        <p class="card-text mt-4 ">Artista: @Model.Artista</p>

                        <p class="card-text ">Anno:

                            @if (@Model.Anno == 0)
                            {

                            }
                            else
                            {
                                @Model.Anno
                                ;
                            }
                        </p>
                        <p class="card-text">Genere: @Model.Genere</p>
                        <div class="bottoneAudioInfo">
                            <audio controls>
                                <source src="@Model.Audio" />
                            </audio>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       <br><br>
    </div>
    
    <a <a asp-controller="User" asp-action="Playlist"> <i class="bi bi-arrow-return-left"></i> Torna alla Playlist</a>
    </div>
</body>
<br><br><br><br>
