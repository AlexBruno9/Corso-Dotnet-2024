@model Brano
@{
    ViewData["Title"] = "Modifica Brano";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="titolo">Titolo</label>
        <input type="text" class="form-control" name="titolo" value="@Model.Titolo" required />
        <label for="artista">Artista</label>
        <input type="text" class="form-control" name="artista" value="@Model.Artista" />
        <label for="anno">Anno</label>
        <input type="text" class="form-control" name="anno" value="@Model.Anno" />
        <label for="immagine">Link Immagine</label>
        <input type="text" class="form-control" name="immagine" value="@Model.Immagine" />
        <label for="genere">Genere</label>
        <select class="form-select form-select-lm mb-3" aria-label="Large select example" name="Genere">

        @foreach (var genere in Model.GenereLista!)
        {
        <option value="@genere">@genere</option>

        }

        </select>
        <label for="durata">Durata Canzone</label>
        <input type="text" class="form-control" name="durata" value="@Model.Durata" required />
    </div>


    <button type="submit" class="btn btn-dark mt-4">Salva</button>
    <a asp-controller="Home" asp-action="BranoDettaglio" asp-route-id="@Model.Id" class="btn btn-dark mt-4 text-light">Annulla</a> 

</form>